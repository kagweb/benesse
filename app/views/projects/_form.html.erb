<%= simple_form_for(@project) do |f| %>

  <%= f.error_notification %>

  <%= f.input :code %>
  <%= f.input :name %>
  <%= f.input :authorizer, collection: User.all, label_method: :username, value_method: :id %>
  <%= f.input :promoter, collection: User.all, label_method: :username, value_method: :id %>
  <%= f.input :operator, collection: User.all, label_method: :username, value_method: :id %>
  <%= f.input :status %>
  <%= f.input :confirmed %>
  <%= f.input :upload_url %>
  <%= f.input :production_upload_url %>
  <%= f.input :test_upload_at, input_html: { class: 'input-small' } %>
  <%= f.input :production_upload_at, input_html: { class: 'input-small' } %>
  <%= f.submit %>

<% end %>

<h1>新規案件登録</h1>

<%= simple_form_for @project do |f| %>

  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :exists_test_server, inline_label: 'テスト環境あり', label: false %>
  <%= f.input :authorizer, collection: User.where(['department_id != ?', Department.find_by_name('業者').try(:id)]), label_method: :name, value_method: :id, include_blank: false %>
  <%= f.input :promoter, collection: User.where(['department_id != ?', Department.find_by_name('業者').try(:id)]), label_method: :name, value_method: :id, include_blank: false %>
  <%= f.input :operator, collection: User.where(['department_id != ?', Department.find_by_name('業者').try(:id)]), label_method: :name, value_method: :id, include_blank: false %>
  <%= f.input :upload_server, { as: :select, collection: Benesse::Application.config.servers, include_blank: false } %>
  <%= f.input :test_upload_at, { as: :date, input_html: { class: 'input-small' } } %>
  <%= f.input :production_upload_at, { input_html: { class: 'input-small' }, datetime_separator: raw('<span class="separator">- </span>'), time_separator: raw('<span class="separator">: </span>')} %>
  <%= f.input :register_datetime, { inline_label: '本番環境移送日の日と時間を未定にする', label: false } %>
  <%= f.input :memo, input_html: { class: 'span6' } %>
  <%= f.button :wrapped, class: 'btn btn-primary' %>

<% end %>

<%= link_to 'Back', projects_path %>

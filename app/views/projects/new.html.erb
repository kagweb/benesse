<h1>新規案件登録</h1>

<%= simple_form_for @project do |f| %>

  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :authorizer, collection: User.all, label_method: :name, value_method: :id, include_blank: false %>
  <%= f.input :promoter, collection: User.all, label_method: :name, value_method: :id, include_blank: false %>
  <%= f.input :operator, collection: User.all, label_method: :name, value_method: :id, include_blank: false %>
  <%= f.input :upload_server, { as: :select, collection: Benesse::Application.config.servers, include_blank: false } %>
  <%= f.input :test_upload_at, { as: :date, input_html: { class: 'input-small' } } %>
  <%= f.input :production_upload_at, { as: :date, input_html: { class: 'input-small' } } %>
  <%= f.input :memo %>
  <%= f.button :wrapped, class: 'btn btn-primary' %>

<% end %>

<%= link_to 'Back', projects_path %>
